<Window x:Class="Modeler.App.Views.Dialogs.RoseCreationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modeler.App.Views.Dialogs"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="RoseCreationDialog">
    <Grid Margin="15">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock>K </TextBlock>
                <TextBox Name="KVal" Margin="10,0,0,0" Width="50"></TextBox>
                <Slider Minimum="0" Maximum="100" Name="R0XSlider" ValueChanged="KValSlider_OnValueChanged" Margin="20,0,0,0" Width="150"/>
                <Rectangle Width="1" Fill="Black"></Rectangle>
                <TextBlock Margin="10,0,0,0">Step</TextBlock>
                <TextBox Name="StepVal"  Margin="10,0,0,0" Width="50"></TextBox>
                <Slider Minimum="0.01" Maximum="1" Name="R0YSlider" ValueChanged="StepValSlider_OnValueChanged" Margin="20,0,0,0" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock Margin="0,0,20,0">Size:</TextBlock>
                <TextBox Margin="0,0,20,0" Width="50" Name="SizeVal" TextChanged="SizeVal_OnTextChanged"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <TextBlock Margin="0,0,20,0">CenterX:</TextBlock>
                <TextBox Margin="0,0,20,0" Width="50" Name="yPointValue" TextChanged="YPointValue_OnTextChanged"></TextBox>
                <TextBlock Margin="0,0,20,0">CenterY:</TextBlock>
                <TextBox Margin="0,0,20,0" Width="50" Name="xPointValue" TextChanged="XPointValue_OnTextChanged"></TextBox>
                <Button Content="Pick Point" Click="ButtonBase_OnClick"></Button>
            </StackPanel>
            <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,15" Grid.Column="2">
                <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
                <Button IsCancel="True" MinWidth="60">_Cancel</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
